{
  "verb-widget.fillsign": {
    "type": "pdf",
    "selector": ".verb-wrapper",
    "handler": "render",
    "renderWidget": false,
    "source": ".verb-wrapper .verb-container",
    "target": ".verb-wrapper .verb-container",
    "limits": {
      "maxNumFiles": 1,
      "allowedFileSize": [0, 1000000000]
    },
    "actionMap": {
      ".verb-wrapper": [
        {
          "actionType": "drop",
          "showSplashScreen": true,
          "splashScreenConfig": {
            "splashScreenParent": "body"
          }
        },
        {
          "actionType": "continueInApp"
        }
      ],
      "#file-upload": [
        {
          "actionType": "upload",
          "showSplashScreen": true,
          "splashScreenConfig": {
            "fragmentLink": "/drafts/mathuria/fragments/flashscreen",
            "parentSelector": "body"
          }
        },
        {
          "actionType": "continueInApp"
        }
      ]
    }
  },
  "marquee": {
    "type": "pdf",
    "selector": ".action-area",
    "handler": "render",
    "renderWidget": false,
    "source": ".action-area .con-button",
    "target": ".action-area .con-button",
    "actionMap": {
      ".action-area .con-button": [
        {
          "actionType": "upload"
        }
      ]
    }
  }
}
